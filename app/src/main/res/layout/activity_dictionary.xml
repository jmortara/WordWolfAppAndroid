<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/LightBlue"
    android:weightSum="1"
    tools:context=".activities.DictionaryActivity">

    <TextView
        android:text="Dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".01"
        android:textSize="@dimen/abc_text_size_headline_material"
        />

    <ScrollView
        android:id="@+id/dictScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dictionaryTitleText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:layout_weight=".3"
        />

    <EditText android:id="@+id/searchInput"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="Search for word..."
              android:inputType="textVisiblePassword"
        />

    <ListView
        android:id="@+id/dictListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_weight=".3"
        />

    <EditText
        android:id="@+id/dictEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dictScrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:layout_marginTop="66dp"
        android:background="@color/white"
        />


</LinearLayout>
