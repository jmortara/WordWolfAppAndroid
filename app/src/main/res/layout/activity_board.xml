<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mortaramultimedia.wordwolfappandroid.BoardActivity">

    <TextView
        android:id="@+id/dictionaryTitleText"
        android:text="Board. Let's Play!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <fragment
        android:id="@+id/boardFragment"
        android:name="com.mortaramultimedia.wordwolfappandroid.BoardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        tools:layout="@layout/fragment_board"
        />

    <TextView
        android:id="@+id/wordSoFarText"
        android:text="Your Word: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submitWord"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Submit"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="handleSubmitButtonClick"
            />

        <TextView
            android:id="@+id/scoreText"
            android:text="Score: "
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/viewDictionaryButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="View Dictionary"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="handleDictionaryButtonClick"
            />

    </LinearLayout>


</LinearLayout >
